{
    "title": "Topology Mediated Quantum Synchronization and Correlation in a Coupled Optomechanical Oscillator",
    "authors": ["Subhadeep Chakraborty", "Sampreet Kalita", "Amarendra Kumar Sarma"],
    "models": {
        "bi": { 
            "00": { 
                "name": "Simple Bidirectional",
                "code": "bi_00",
                "params": {
                    "omega_m": 1,
                    "Delta_0": 1,
                    "kappa": [0.15, 0.15],
                    "gamma": [0.005, 0.005],
                    "g_0":   [0.005, 0.005],
                    "delta": 0.004,
                    "A_l": 52,
                    "lamb": 0.075,
                    "n_ths": [0, 0]
                }
            }
        },
        "uni": { 
            "00": { 
                "name": "Simple Unidirectional",
                "code": "uni_00",
                "params": {
                    "omega_m": 1,
                    "Delta_0": 1,
                    "kappas": [0.15, 0.15],
                    "gammas": [0.005, 0.005],
                    "g_0s": [0.005, 0.005],
                    "delta": 0.003,
                    "A_l": 52,
                    "eta": 0.75,
                    "n_ths": [0, 0]
                }
            }
        }
    },
    "scripts": {
        "dyna_params": {
            "func": "dynamics_measure",
            "solver_type": "complex",
            "cache": true,
            "dir": "data_test",
            "T": {
                "var": "t",
                "unit": "",
                "min": 0,
                "max": 1000,
                "steps": 10001
            }
        },
        "meas_params": {
            "func": "measures_1D",
            "type": "corr",
            "code": "sync_phase",
            "name": "Phase Difference (Cosine Matching)",
            "avg_mode": "range",
            "avg_type": "min_max",
            "span": 1000,
            "start": 5000,
            "stop": 6000,
            "thres_mode": "max_min",
            "num_modes": 4,
            "mode_i": 1,
            "mode_j": 3,
            "X": {
                "var": "delta",
                "label": "\\delta",
                "unit": "",
                "min": 0.001,
                "max": 0.003,
                "steps": 2
            },
            "Y": {
                "var": "eta",
                "unit": "",
                "min": 0.5,
                "max": 1.0,
                "steps": 11
            }
        },
        "plot": true,
        "plot_params": {
            "title": "Quantum Phase Synchronization vs Detuning",
            "x_label": "$\\delta$",
            "y_label": "$S_p$",
            "type": "line",
            "color": "r",
            "color_grad": "br_light",
            "linestyle": "-"
        }
    }
}